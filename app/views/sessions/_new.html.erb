<% provide(:title," | Sign in ") %>
<h1 style="color: red;font-size:58px;position:relative;top:120px">Sorry!Renovation.See you soon...</h1>
<div class="sign-in">
	<div class="new">
		<h1>Sign in</h1>
		<%= form_for(:session, url:sessions_path) do |f| %> 
			<div class="name-field">
				<%= f.label :email %>
				<%= f.text_field :email, placeholder:"Enter your email" %>
			</div>

			<div class="pass-field">
				<%= f.label :password %>
				<%= f.password_field :password, placeholder:"Enter your password" %>
			</div>

			<%= f.submit "Sign in", class:"btn btn-default btn-sign", disable_with: "true"%>

			<p>New user? <%= link_to "Sign up now!",'#', class: 'link-sign-up'%></p>
		<% end %>
	</div>
</div>